<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.handa.fragments.CreateSeventh">


    <ImageView
        android:id="@+id/Rep_photo"
        android:layout_width="216dp"
        android:layout_height="239dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/photo_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:src="@drawable/practice2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="200dp"
        android:text="@string/please_register_the_representative_photo"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Rep_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:text="button"
        app:layout_constraintBottom_toTopOf="@+id/CreateFinish"
        app:layout_constraintEnd_toEndOf="@+id/Rep_photo"
        app:layout_constraintStart_toStartOf="@+id/Rep_photo"
        app:layout_constraintTop_toBottomOf="@+id/Rep_photo" />

    <Button
        android:id="@+id/CreateFinish"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="215dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>