<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.handa.fragments.ChallengeMain"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:layout_marginTop="26.67dp"
                android:layout_marginRight="13.33dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_diet"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"
                    android:text="Diet"></Button>

                <Button
                    android:id="@+id/button_study"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"
                    android:text="Study"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:layout_marginTop="26.67dp"
                android:layout_marginRight="13.33dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_hobby"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"
                    android:text="Hobby"></Button>

                <Button
                    android:id="@+id/button_money"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"
                    android:text="Accounting"></Button>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:layout_marginTop="26.67dp"
                android:layout_marginRight="13.33dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_lang"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"

                    android:text="Language"></Button>

                <Button
                    android:id="@+id/button_pattern"
                    android:layout_width="75dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_weight="1"
                    android:text="Daily Routine"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

